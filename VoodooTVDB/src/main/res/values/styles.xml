<resources>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchWidthWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Divider.Grey" parent="MatchWidthWrapHeight">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="DrawerIcon" >
        <item name="android:layout_height">@dimen/large</item>
        <item name="android:layout_width">@dimen/large</item>
        <item name="android:layout_marginTop">@dimen/normal</item>
        <item name="android:layout_marginBottom">@dimen/normal</item>
        <item name="android:layout_marginLeft">@dimen/normal</item>
    </style>

    <style name="DrawerTitle" parent="Wrap">
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="android:padding">@dimen/normal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="oakFont">@string/font_roboto_bold</item>
    </style>

    <style name="VoodooEditText" parent="MatchWidthWrapHeight">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:singleLine">true</item>
        <item name="floatLabelColor">@color/blue</item>
    </style>

    <style name="VoodooButton" parent="Wrap">
        <item name="android:layout_margin">@dimen/normal</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:paddingStart">@dimen/largest</item>
        <item name="android:paddingEnd">@dimen/largest</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="VoodooButton.Blue">
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="VoodooButtonRound">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="VoodooCard" parent="MatchWidthWrapHeight">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="VoodooCard.Button" parent="Wrap">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="VoodooCard.Button.Text" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="cardElevation">1dp</item>
        <item name="oakFont">@string/font_roboto_bold</item>
    </style>

    <style name="VoodooCard.ListItem" parent="VoodooCard">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>


    <style name="VoodooErrorText" parent="Wrap">
        <item name="android:padding">@dimen/normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="oakFont">@string/font_roboto_medium</item>
    </style>

    <style name="FloatingButton" parent="Wrap">
        <item name="android:layout_margin">8dp</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimary</item>
        <item name="fab_colorRipple">@color/colorPrimaryDark</item>
    </style>

    <style name="Feature.Title" parent="Wrap">
        <item name="android:padding">@dimen/tiny</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingEnd">@dimen/normal</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:paddingStart">@dimen/normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">15</item>
    </style>

    <style name="Feature.SectionTitle" parent="Wrap">
        <item name="android:paddingTop">@dimen/normal</item>
        <item name="android:paddingEnd">@dimen/normal</item>
        <item name="android:paddingBottom">@dimen/tiny</item>
        <item name="android:paddingStart">@dimen/small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardTitle" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/tiny</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Show.Title" parent="Wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/normal</item>
        <item name="android:paddingEnd">@dimen/normal</item>
        <item name="android:paddingStart">@dimen/normal</item>
        <item name="android:textSize">@dimen/text_size_larger</item>
        <item name="oakFont">@string/font_roboto_regular</item>
    </style>

    <style name="Show.SubTitle" parent="Wrap">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="oakFont">@string/font_roboto_regular</item>
    </style>

    <style name="Show.Content" parent="MatchWidthWrapHeight">
        <item name="android:padding">@dimen/normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="oakFont">@string/font_roboto_light</item>
    </style>

    <style name="Show.Staring.Title" parent="Wrap">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="oakFont">@string/font_roboto_bold</item>
    </style>

    <style name="Show.Staring.Text" parent="Wrap">
        <item name="android:paddingStart">@dimen/small</item>
        <item name="android:paddingEnd">@dimen/normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="oakFont">@string/font_roboto_light</item>
    </style>

    <style name="Show.Related.Title" parent="MatchWidthWrapHeight">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingTop">@dimen/normal</item>
        <item name="android:paddingEnd">@dimen/normal</item>
        <item name="android:paddingStart">@dimen/normal</item>
    </style>

    <style name="SearchSectionTitle" parent="Wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_larger</item>
        <item name="android:padding">@dimen/normal</item>
        <item name="oakFont">@string/font_roboto_bold</item>
    </style>

    <style name="SearchSectionTitleMore" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:padding">@dimen/tiny</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="oakFont">@string/font_roboto_regular</item>
    </style>

</resources>
