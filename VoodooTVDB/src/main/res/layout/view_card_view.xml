<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/Wrap"
    tools:background="@color/black"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/login_card_view"
        style="@style/VoodooCard"
        android:layout_margin="@dimen/tiny"
        >

        <RelativeLayout
            style="@style/MatchWidthWrapHeight">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="130dp"
                android:layout_height="195dp"
                android:contentDescription="@string/card_image"
                />

            <ImageView
                android:id="@+id/card_menu"
                android:layout_below="@id/card_image"
                android:layout_alignEnd="@+id/card_image"
                android:layout_height="wrap_content"
                android:layout_width="20dp"
                android:src="@drawable/ic_more"
                android:contentDescription="@string/card_more"
                />

            <oak.widget.TextViewWithFont
                android:id="@+id/card_title"
                style="@style/CardTitle"
                tools:text="Game of Thrones"
                android:layout_below="@+id/card_image"
                android:layout_alignStart="@+id/card_image"
                android:layout_toStartOf="@+id/card_menu"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>