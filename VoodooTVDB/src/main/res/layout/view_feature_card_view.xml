<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/Wrap"
    android:padding="@dimen/tiny"
    >

    <ImageView
        android:id="@+id/feature_image"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:contentDescription="@string/feature_image"
        tools:background="@color/black_10_percent_transparency"
        />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/feature_play_button"
        style="@style/FloatingButton"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play"
        />

    <TextView
        android:id="@+id/feature_title"
        style="@style/Feature.Title"
        android:layout_alignBottom="@id/feature_image"
        android:layout_alignStart="@id/feature_image"
        tools:text="Game of Thrones"/>

</RelativeLayout>