<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/MatchWidthWrapHeight">

    <oak.widget.TextViewWithFont
        android:id="@+id/home_hsv_section_title"
        style="@style/Feature.SectionTitle"
        tools:text="Featured"
        />

    <HorizontalScrollView
        style="@style/MatchWidthWrapHeight"
        android:scrollbars="none"
        android:paddingStart="@dimen/tiny"
        android:paddingEnd="@dimen/tiny"
        >

        <LinearLayout
            android:id="@+id/home_hsv_container"
            style="@style/MatchWidthWrapHeight"
            android:orientation="horizontal"
            />

    </HorizontalScrollView>

</LinearLayout>